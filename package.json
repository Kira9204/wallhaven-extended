{
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\"",
    "build": "npm-run-all format build:clean build:compile",
    "build:clean": "shx rm -rf ./dist",
    "build:compile": "tsc -p ./tsconfig.json",
    "watch": "tsc -p ./tsconfig.json --watch"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "prettier": "3.6.2",
    "shx": "^0.4.0",
    "typescript": "^5.9.3"
  }
}
